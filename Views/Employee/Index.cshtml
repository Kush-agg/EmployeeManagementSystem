  $('#turnFalse').click(function(){
    location.href=`/Employee/turnFalse`;
  })
  $('#turnfalse').click(function(){
    location.href=`/Employee/turnFalse`;
  })
  
})
$(document).ready(function(){
  if(x == 'True'){
    $('#exampleModalLong').modal('show');
  }
})
  
